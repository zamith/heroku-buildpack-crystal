#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
CRYSTAL_URL="https://github.com/crystal-lang/crystal/releases/download/0.15.0/crystal-0.15.0-1-linux-x86_64.tar.gz"
CRYSTAL_DIR=/tmp/crystal
unset GIT_DIR

# Install Crystal
echo "-----> Installing Crystal"
mkdir -p $CRYSTAL_DIR
curl -sL $CRYSTAL_URL | tar xz -C $CRYSTAL_DIR --strip-component=1

# Build the project
cd $BUILD_DIR

if [ -f shard.yml ]; then
  echo "-----> Installing Dependencies"
  $CRYSTAL_DIR/bin/crystal deps
fi

echo "-----> Compiling app.cr"
$CRYSTAL_DIR/bin/crystal build --release --link-flags "-l:/tmp/crystal/embedded/lib/libatomic_ops.a -l:/tmp/crystal/embedded/lib/libatomic_ops_gpl.a -l:/tmp/crystal/embedded/lib/libcord.a -l:/tmp/crystal/embedded/lib/libevent.a -l:/tmp/crystal/embedded/lib/libevent_core.a -l:/tmp/crystal/embedded/lib/libevent_extra.a -l:/tmp/crystal/embedded/lib/libevent_openssl.a -l:/tmp/crystal/embedded/lib/libevent_pthreads.a -l:/tmp/crystal/embedded/lib/libgc.a -l:/tmp/crystal/embedded/lib/libpcl.a -l:/tmp/crystal/embedded/lib/libpcre.a -l:/tmp/crystal/embedded/lib/libpcrecpp.a -l:/tmp/crystal/embedded/lib/libpcreposix.a -l:/tmp/crystal/embedded/lib/libunwind.a -l:/tmp/crystal/embedded/lib/libunwind-coredump.a -l:/tmp/crystal/embedded/lib/libunwind-generic.a -l:/tmp/crystal/embedded/lib/libunwind-ptrace.a -l:/tmp/crystal/embedded/lib/libunwind-setjmp.a -l:/tmp/crystal/embedded/lib/libunwind-x86_64.a" app.cr
